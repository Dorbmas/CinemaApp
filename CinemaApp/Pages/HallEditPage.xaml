<Page x:Class="CinemaApp.Pages.HallEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CinemaApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1440"
      Title="Добавление/редактирование залов">

    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Зал:" Width="100" FontSize="20" Margin="5"></TextBlock>
                <TextBox Text="{Binding Title}" FontSize="20" Width="200" Margin="5"></TextBox>
            </StackPanel>
            <Button Content="Сохранить" Height="50" Width="250" FontSize="20" Margin="5" Name="btnSave" Background="LightBlue" BorderBrush="LightBlue" Click="btnSave_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
